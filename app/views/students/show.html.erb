<h1><%= @student.name %></h1>
<h3>Mod <%= @student.mod %></h3>
<h3>My ducks:</h3>
<ul>
  <% @student.ducks.each do |duck| %>
    <li> <%= link_to duck.name, duck_path(duck) %> </li>
  <% end %>
</ul>
<br>
<p><%= link_to "Back to Students", students_path %></p>
<p><%= link_to "Edit Student", edit_student_path %></p>
<p><%= link_to "Delete Student", student_path(@student), method: :delete, data: {confirm: "Are you sure you want to delete this student?"} %></p>