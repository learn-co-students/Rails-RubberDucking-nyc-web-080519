<h1>Create New Student</h1>

<% if flash.now[:messages] %>
    <h2><%= flash.now[:messages] %></h2>
<% end %>

<%= form_for @student do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :mod %>
    <%= f.number_field :mod %>
    <%= f.submit :'Create Student' %>
<% end %>
