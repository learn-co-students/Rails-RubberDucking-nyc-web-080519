<h1>Change-a-Duck</h1>
<% if flash[:messages] %>
    <ul>
    <% flash[:messages].each do|m| %>
        <li><%= m %></li>
    <% end %>
    </ul>
<% end %>
<%= form_for @duck do |f| %>
    Name: <%= f.text_field :name %> <br>
    Description: <%= f.text_field :description %> <br>
    Student: <%= f.collection_select :student_id, @students, :id, :name  %> <br><br>
    <%= f.submit :submit %>
<% end %>