<h1>Edit Duck</h1>

<% if flash[:messages]%>
  <ul>
    <% flash[:messages].each do |m|%>
    <li><%=m%></li>
    <% end %>
  </ul>
<%end%>

<%= form_for @duck do |f| %>
  name: <%= f.text_field :name %>
  description: <%= f.text_field :description %>
  student: <%= f.collection_select :student_id, @students, :id, :name %>

  <%= f.submit "Edit Duck" %>
<% end %>