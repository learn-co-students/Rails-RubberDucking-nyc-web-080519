<h1>Make a new duck!</h1>

<%= form_for @duck do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :student %>
  <%= f.collection_select(:student_id, @students, :id, :name) %>
  <%= f.submit %>
<% end %>